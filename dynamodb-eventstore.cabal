                       either,
                       hashable,
                       uuid,
                       feed,
                       errors,
                       containers >= 0.5,
                       http-types >= 0.8,
                       attoparsec >= 0.12,
                       text-show >= 2,
                       QuickCheck,
                       quickcheck-instances,
                       free >= 4.10,
                       bytestring >= 0.10,
                       time >= 1.4,
                       aeson >= 0.8,
                       aeson-pretty,
                       random >= 1.1,
                       transformers >= 0.4,
                       mtl,
                       text-format,
                       aeson,
                       unordered-containers,
                       semigroups,
                       pipes,
                       exceptions,
                       monad-control,
                       lens,
                       HTTP,
                       blaze-markup,
                       amazonka >= 1.0,
                       amazonka-core >= 1.0,
                       amazonka-dynamodb >= 1.0,
                       resourcet

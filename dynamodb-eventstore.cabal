                       warp,
                       network-simple,
                       amazonka-core >= 1.0,
                       amazonka-dynamodb >= 1.0,
                       exceptions,
                       monad-control,
                       optparse-applicative,
                       transformers >= 0.4
  default-language:    Haskell2010
  hs-source-dirs:      web
  main-is:             Main.hs

executable client
  GHC-Options: -Wall
  default-extensions:          NoImplicitPrelude
  build-depends:       base,
                       basic-prelude,
                       wreq,
                       random >= 1.1,
                       text >= 1.2,
                       aeson >= 0.8,
                       taggy,
                       taggy-lens,
                       unordered-containers,

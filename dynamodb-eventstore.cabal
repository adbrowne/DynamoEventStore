                       system-filepath,
                       lens,
                       blaze-markup,
                       aeson-diff
  default-language:    Haskell2010
  hs-source-dirs:      client
  main-is:             Main.hs

Test-Suite tasty
  GHC-Options: -Wall
  default-extensions:          NoImplicitPrelude
  type:                exitcode-stdio-1.0
  main-is:             tastytests.hs
  hs-source-dirs:      tests
